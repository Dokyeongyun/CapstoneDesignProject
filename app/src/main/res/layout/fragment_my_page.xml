<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.MyPage.MyPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LL_myPageTop"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#FFF154"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/IV_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/TV_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:autoText="false"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="30dp"
                    android:paddingEnd="10dp"
                    android:text="도경윤 님 \n\n닉네임"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/BT_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_vpn_key_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F1F1F1"
                    android:gravity="bottom|center|left"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="계정 관리" />

                <Button
                    android:id="@+id/BT_manageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="프로필 수정" />

                <Button
                    android:id="@+id/BT_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="회원 탈퇴" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F1F1F1"
                    android:gravity="bottom|center|left"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="커뮤니티 관리" />

                <Button
                    android:id="@+id/BT_getArticles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="게시글 관리" />

                <Button
                    android:id="@+id/BT_getReviews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="리뷰 관리" />

                <Button
                    android:id="@+id/BT_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="즐겨찾는 차박지 관리" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F1F1F1"
                    android:gravity="bottom|center|left"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="앱 설정" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="알림 설정" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="암호잠금" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center|left"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="권한 설정" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>